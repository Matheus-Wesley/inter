<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xamarincmd.Cad">
    <ContentPage.Content>
        <StackLayout Padding="30">
            <Label Text="Novo usuario" FontSize="Medium" HorizontalOptions="Center" />
            <Entry x:Name="et_firstName" Placeholder="Nome" VerticalOptions="Center" />
            <Label x:Name="lb_firstName" Text="Insira um nome valido" IsVisible="False" TextColor="Red"/>
            <Entry x:Name="et_surname" Placeholder="Sobrenome" VerticalOptions="Center" />
            <Entry x:Name="et_age" Placeholder="Idade" VerticalOptions="Center" TextChanged="OnTextChanged" Keyboard="Numeric"/>
            <Label x:Name="lb_age" Text="Insira uma idade valida" IsVisible="False" TextColor="Black"/>
            <Button Text="Cadastrar" Clicked="Button_Cad"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>